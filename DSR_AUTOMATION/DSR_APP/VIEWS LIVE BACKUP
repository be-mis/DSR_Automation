    <script>

    let message = "";

        function toggleAccordion(button) {
            const content = button.nextElementSibling;
            content.classList.toggle('show');
            const icon = button.querySelector('span:last-child');
            icon.innerHTML = content.classList.contains('show') ? '&#x25B2;' : '&#x25BC;';
        }
        document.addEventListener("DOMContentLoaded", function () {
            // Enable in-line editing for cells with contenteditable="true"
            const editableCells = document.querySelectorAll("[contenteditable='true']");
        
            editableCells.forEach(function (cell) {
                // Add event listeners for focus and blur events
                cell.addEventListener("focus", function () {
                    // Store the original value for comparison
                    cell.dataset.originalValue = cell.innerText.trim();
                });
        
                cell.addEventListener("blur", function () {
                    // Check if the value has changed
                    const originalValue = cell.dataset.originalValue;
                    const newValue = cell.innerText.trim();
        
                    // Determine whether the cell is for item code or BP code
                    if (newValue !== originalValue) {
                        if (cell.id.startsWith("item-code")) {
                            saveItemCode(cell);
                        } else if (cell.id.startsWith("bp-code")) {
                            saveBpCode(cell);
                        }
                    }
                });
                                // Save changes when Enter key is pressed
                cell.addEventListener("keydown", function (event) {
                    if (event.key === "Enter") {
                        event.preventDefault(); // Prevent line break
                        cell.blur(); // Trigger blur event
                    }
                });
            });
        
            function saveItemCode(cell) {
                const itemCode = cell.innerText.trim();
            
                // Validate that the item code is exactly 16 digits
                const isValid = /^\d{16}$/.test(itemCode); // Regex for 16 digits
                if (!isValid) {
                    message = "Item code must be exactly 16 digits."
                    document.getElementById('messageDisplay').innerText = message;
                    showErrorAlert(); // open the error alert
                    cell.innerText = cell.dataset.originalValue; // Revert to original value
                    cell.blur(); // Remove focus
                    // Pass the function reference to setTimeout
                    setTimeout(hideAlerts, 3000); // close the error alert after 3secs
                    return; // Stop the function    
                }
            
                const rowId = cell.id.split('-')[2]; // Extract row_id
                const fileId = cell.dataset.fileId; // Ensure file ID is stored in the dataset
            
                fetch(`/edit-item-code/${rowId}/${fileId}/`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/x-www-form-urlencoded"
                    },
                    body: new URLSearchParams({ "item_code": itemCode })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log("Item code updated successfully!");
                        cell.dataset.originalValue = itemCode; // Update value
            
                        // Change the color dynamically based on the new value
                        cell.style.color = "orange"; // Default color for valid input
                    } else {
                        message = "Failed to update item code."
                        document.getElementById('messageDisplay').innerText = message;

                        showErrorAlert(); // open the error alert
                        setTimeout(hideAlerts, 3000); // close the error alert after 3secs
                        cell.innerText = cell.dataset.originalValue; // Revert value
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    cell.innerText = cell.dataset.originalValue; // Revert value
                });
            }


            function saveBpCode(cell) {
                const bpcode = cell.innerText.trim();
            
                const rowId = cell.id.split('-')[2]; // Extract row_id
                const fileId = cell.dataset.fileId; // Ensure file ID is stored in the dataset
            
                fetch(`/edit-bp-code/${rowId}/${fileId}/`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/x-www-form-urlencoded"
                    },
                    body: new URLSearchParams({ "bp_code": bpcode })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log("Item code updated successfully!");
                        cell.dataset.originalValue = bpcode; // Update value
            
                        // Change the color dynamically based on the new value
                        cell.style.color = "orange"; // Default color for valid input
                    } else {
                        message = "Failed to update item code."
                        document.getElementById('messageDisplay').innerText = message;

                        showErrorAlert(); // open the error alert
                        setTimeout(hideAlerts, 3000); // close the error alert after 3secs
                        cell.innerText = cell.dataset.originalValue; // Revert value
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    cell.innerText = cell.dataset.originalValue; // Revert value
                });
            }
            
        });

    function filterTable(tableId) {
        const table = document.getElementById(tableId);
        const rows = [...table.querySelectorAll("tbody tr")];
        const filters = [...table.querySelectorAll(".filter-input")].map(input => input.value.toLowerCase());

        rows.forEach(row => {
            const cells = [...row.querySelectorAll("td")];
            const match = filters.every((filter, index) =>
                !filter || cells[index]?.textContent.toLowerCase().includes(filter)
            );
            row.style.display = match ? "" : "none";
        });
    }

    function showSuccessAlert() {
        document.getElementById('successAlert').style.display = 'block';
        document.getElementById('errorAlert').style.display = 'none';
    }

    function showErrorAlert() {
        document.getElementById('errorAlert').style.display = 'block';
        document.getElementById('successAlert').style.display = 'none';
    }

    function hideAlerts() {
        document.getElementById('successAlert').style.display = 'none';
        document.getElementById('errorAlert').style.display = 'none';
    }   

    </script>
    
</body>
</html>







@csrf_exempt
def edit_item_code(request, row_id, file_id):
    try:
        # Get the specific DSR object
        dsr = get_object_or_404(DSR, id=file_id)

        # Extract the row from extracted_data using row_id
        extracted_data = dsr.extracted_data or []
        row = next((item for item in extracted_data if item.get('row_id') == row_id), None)

        if not row:
            return JsonResponse({'success': False, 'error': 'Row not found'}, status=404)

        if request.method == 'POST' and request.headers.get('Content-Type') == 'application/x-www-form-urlencoded':
            # Update the item_code in the row and save the DSR object
            new_item_code = request.POST.get('item_code')
            if new_item_code:
                row['item_code'] = new_item_code
                dsr.extracted_data = extracted_data
                dsr.save()
                return JsonResponse({'success': True, 'item_code': new_item_code})
            else:
                return JsonResponse({'success': False, 'error': 'Item code is missing'}, status=400)

        return JsonResponse({'success': False, 'error': 'Invalid request method'}, status=405)
    
    except Exception as e:
        logger.error(f"Error editing item code: {str(e)}")  # Log the error for debugging
        return JsonResponse({'success': False, 'error': 'An unexpected error occurred. Please try again later.'}, status=500)


@csrf_exempt
def edit_bp_code(request, row_id, file_id):
    try:
        # Get the specific DSR object
        dsr = get_object_or_404(DSR, id=file_id)

        # Extract the row from extracted_data using row_id
        extracted_data = dsr.extracted_data or []
        row = next((item for item in extracted_data if item.get('row_id') == row_id), None)

        if not row:
            return JsonResponse({'success': False, 'error': 'Row not found'}, status=404)

        if request.method == 'POST' and request.headers.get('Content-Type') == 'application/x-www-form-urlencoded':
            # Update the item_code in the row and save the DSR object
            new_bp_code = request.POST.get('bp_code')
            if new_bp_code:
                row['bp_code'] = new_bp_code
                dsr.extracted_data = extracted_data
                dsr.save()
                return JsonResponse({'success': True, 'bp_code': new_bp_code})
            else:
                return JsonResponse({'success': False, 'error': 'Item code is missing'}, status=400)

        return JsonResponse({'success': False, 'error': 'Invalid request method'}, status=405)
    
    except Exception as e:
        logger.error(f"Error editing item code: {str(e)}")  # Log the error for debugging
        return JsonResponse({'success': False, 'error': 'An unexpected error occurred. Please try again later.'}, status=500)